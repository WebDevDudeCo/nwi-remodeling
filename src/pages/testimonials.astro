---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/ui/Hero.astro';
import Button from '../components/ui/Button.astro';
import Testimonial from '../components/ui/Testimonial.astro';

// SEO metadata
const title = "Client Testimonials | NWI Remodeling";
const description = "See what our clients are saying about their experience with NWI Remodeling. Read reviews and view photos of our completed construction and remodeling projects.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Client Testimonials"
    description="See what our clients are saying about our work"
    alignment="center"
    hasBackground={true}
  >
  </Hero>

  <!-- Featured Testimonials -->
  <section class="section">
    <div class="container">
      <h2 class="text-center">What Our Clients Say</h2>
      <p class="text-center mb-8">Don't just take our word for it—hear from homeowners who have experienced our service firsthand</p>
      
      <div class="testimonials-grid">
        <Testimonial 
          quote="NWI Remodeling transformed our outdated kitchen into a stunning, modern cooking space that's now the heart of our home. Their attention to detail and craftsmanship exceeded our expectations."
          name="Michael & Sarah Johnson"
          location="Valparaiso, IN"
          rating={5}
          imageUrl="/images/testimonial-1.jpg"
        />
        
        <Testimonial
          quote="We hired NWI for our bathroom renovation after a friend's recommendation, and we couldn't be happier. They were professional, on time, and on budget. The final result is absolutely beautiful!"
          name="Robert Johnson"
          location="Pine Valley"
          rating={5}
          imageUrl="/images/testimonial-robert.jpg"
        />
        
        <Testimonial
          quote="The team at NWI Remodeling built a beautiful addition to our home that perfectly matches the existing structure. Their communication throughout the process was exceptional."
          name="David & Jennifer Lee"
          location="Crown Point, IN"
          rating={5}
          imageUrl="/images/testimonial-2.jpg"
        />
      </div>
    </div>
  </section>

  <!-- Project Showcases -->
  <section class="section bg-alt">
    <div class="container">
      <h2 class="text-center">Featured Projects</h2>
      <p class="text-center mb-8">Take a look at some of our recently completed renovations</p>
      
      <div class="projects-grid">
        <div class="project-showcase">
          <div class="project-image-container">
            <img src="/images/project-kitchen1.jpg" alt="Modern kitchen renovation with white cabinets and center island" loading="lazy" />
          </div>
          <div class="project-details">
            <h3>Contemporary Kitchen Remodel</h3>
            <p class="project-location">Oakwood Hills</p>
            <p>Complete kitchen renovation with custom cabinetry, quartz countertops, and modern appliances.</p>
            <div class="project-meta">
              <span>Duration: 6 weeks</span>
              <span class="project-rating">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              </span>
            </div>
          </div>
        </div>
        
        <div class="project-showcase">
          <div class="project-image-container">
            <img src="/images/project-bathroom1.jpg" alt="Luxury master bathroom with walk-in shower and freestanding tub" loading="lazy" />
          </div>
          <div class="project-details">
            <h3>Luxurious Master Bathroom</h3>
            <p class="project-location">Pine Valley</p>
            <p>Master bathroom remodel featuring a custom tile shower, freestanding soaking tub, and double vanity.</p>
            <div class="project-meta">
              <span>Duration: 4 weeks</span>
              <span class="project-rating">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
