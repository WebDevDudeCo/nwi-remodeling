---
import { siteConfig } from '../../config/site';
import styles from './Footer.module.css';

interface Props {
  /** Additional CSS class names */
  class?: string;
}

const { class: className = '' } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class={`${styles.footer} ${className}`}>
  <div class="container">
    <div class={styles.footerGrid}>
      <!-- Company Info -->
      <div class={styles.company}>
        <a href="/" class={styles.logo}>{siteConfig.name}</a>
        <p class={styles.description}>Quality construction and remodeling services delivered with professionalism and craftsmanship since 2005.</p>
        <div class={styles.social}>
          <a href="https://facebook.com" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          <a href="https://instagram.com" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://linkedin.com" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href="https://pinterest.com" aria-label="Pinterest" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <path d="M19 5H5a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2z"></path>
              <circle cx="12" cy="12" r="4"></circle>
            </svg>
          </a>
          <a href="https://houzz.com" aria-label="Houzz" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation Links -->
      <div class={styles.nav}>
        <h3 class={styles.heading}>Quick Links</h3>
        <ul class={styles.navList}>
          {siteConfig.footerLinks.main.map((link) => (
            <li>
              <a
                href={link.href}
                class={styles.link}
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class={styles.services}>
        <h3 class={styles.heading}>Our Services</h3>
        <ul class={styles.navList}>
          <li><a href="/services#kitchen" class={styles.link}>Kitchen Remodeling</a></li>
          <li><a href="/services#bathroom" class={styles.link}>Bathroom Remodeling</a></li>
          <li><a href="/services#additions" class={styles.link}>Home Additions</a></li>
          <li><a href="/services#basement" class={styles.link}>Basement Finishing</a></li>
          <li><a href="/services#whole-home" class={styles.link}>Whole Home Renovations</a></li>
          <li><a href="/services#outdoor" class={styles.link}>Outdoor Living Spaces</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class={styles.contact}>
        <h3 class={styles.heading}>Contact Us</h3>
        <address class={styles.contactInfo}>
          <p>
            <span class={styles.contactLabel}>Address:</span>
            <span>123 Construction Way, Suite 101<br />Anytown, USA 12345</span>
          </p>
          <p>
            <span class={styles.contactLabel}>Phone:</span>
            <a href="tel:+15555555555">(555) 555-5555</a>
          </p>
          <p>
            <span class={styles.contactLabel}>Email:</span>
            <a href="mailto:info@nwiremodeling.com">info@nwiremodeling.com</a>
          </p>
          <p>
            <span class={styles.contactLabel}>Hours:</span>
            <span>Monday-Friday: 8am-6pm<br />Saturday: 9am-3pm</span>
          </p>
        </address>
      </div>
    </div>

    <div class={styles.bottom}>
      <div class={styles.legal}>
        <p>&copy; {currentYear} {siteConfig.name}. All rights reserved.</p>
        <div class={styles.legalLinks}>
          {siteConfig.footerLinks.legal.map((link) => (
            <a
              href={link.href}
              class={styles.legalLink}
              target={link.external ? "_blank" : undefined}
              rel={link.external ? "noopener noreferrer" : undefined}
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
      <div class={styles.certifications}>
        <span class={styles.certBadge}>Licensed</span>
        <span class={styles.certBadge}>Bonded</span>
        <span class={styles.certBadge}>Insured</span>
      </div>
    </div>
  </div>
</footer>